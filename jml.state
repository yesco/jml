[macro default-style]<style>html { background:#242729; width: 90%; overflow-x: hidden; } body { width: 100%; background: white; margin: 0px; padding-right: 30px; padding-left: 50px; } .button, button { background:#0000cc; color:white; margin: 5px; border-radius:5px; border: 0px solid black; padding: 8px; padding-left: 15px; padding-right: 15px; font-size: 20px; } input.button, button a, header a { color:white; text-decoration: none; font-weight:bold} .foothead { margin-left: -50px; background:#242729; color:white; width:100%; min-height: 150px; padding-left:15px; padding-right: 100px; padding-bottom: 8px; margin-bottom: 30px; } header a, footer a { color: #9fa6ad; font-size: 12pt; } table tr td { border: 1px solid black; padding: 5px; }</style>[/macro]
